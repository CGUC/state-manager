{
  "name": "@skybunk/state-manager",
  "version": "0.0.1",
  "description": "manage generic skybunk state across all platforms",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "code-format": "npx eslint ./ --fix && npx prettier \"**/*.js\" --write",
    "code-format-check": "npx eslint ./ && npx prettier \"**/*.js\" --check"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CGUC/state-manager.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CGUC/state-manager/issues"
  },
  "homepage": "https://github.com/CGUC/state-manager#readme",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "husky": "^4.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.1",
    "mobx": "^5.15.4",
    "mobx-react": "^6.1.4",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@types/jest": "^25.1.1",
    "eslint-config-prettier": "^6.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
